generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
  relationMode = "prisma"
}

model Account {
  id            String          @id @default(cuid())
  platform      String
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @default(now()) @updatedAt @map("updated_at")
  clientId      String
  clientSecret  String
  refreshToken  String?         @db.Text
  accessToken   String?         @db.Text
  authCode      String?         @db.Text
  expiresIn     Int?
  scope         String?
  apiDomain     String?
  StudioAccount StudioAccount[]
  TokenRefresh  TokenRefresh[]


}

model TokenRefresh {
  id            String         @id @default(cuid())
  accountId     String         
  accessToken   String         @db.Text
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @default(now()) @updatedAt @map("updated_at")
  Account       Account        @relation(fields: [accountId], references: [id])

  @@index([accountId])
}

model Studio {
  id            String          @id @default(cuid())
  zohoId        String          @unique
  name          String
  managerName   String?
  smsPhone      String     
  callPhone     String?
  active        Boolean         @default(false)
  StudioAccount StudioAccount[]
  ZohoWebhook   ZohoWebhook[]
  TwilioMessage TwilioMessage[]
  Message       Message[]
}

model StudioAccount {
  studioId  String
  accountId String
  Studio    Studio  @relation(fields: [studioId], references: [id])
  Account   Account @relation(fields: [accountId], references: [id])

  @@id([studioId, accountId])
  @@index([studioId])
  @@index([accountId])
}



model ZohoWebhook {
  id                      String   @id @default(cuid())
  studioZohoId            String?
  contactId               String?
  firstName               String?
  mobile                  String?
  twilioMessageId         String?
  sentWelcomeMessage      Boolean  @default(false)
  sentFollowUpMessage     Boolean  @default(false)
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @default(now()) @updatedAt @map("updated_at")
  Studio                  Studio?   @relation(fields: [studioZohoId], references: [zohoId])
  @@index([studioZohoId])
}


model TwilioMessage {
  id                      String    @id @default(cuid())
  studioId                String?
  contactId               String?
  from                    String
  to                      String
  message                 String?   @db.Text
  twilioMessageId         String
  createdAt               DateTime  @default(now()) @map("created_at")
  updatedAt               DateTime  @default(now()) @updatedAt @map("updated_at")
  Studio                  Studio?   @relation(fields: [studioId], references: [id])
  @@index([studioId])
}

model Message {
  id                      String    @id @default(cuid())
  fromNumber              String
  toNumber                String
  studioId                String?
  contactId               String?
  message                 String?   @db.Text
  twilioMessageId         String?
  isWelcomeMessage        Boolean   @default(false)
  isFollowUpMessage       Boolean   @default(false)
  createdAt               DateTime  @default(now()) @map("created_at")
  updatedAt               DateTime  @default(now()) @updatedAt @map("updated_at")
  Studio                  Studio?   @relation(fields: [studioId], references: [id])
  @@index([studioId])
}